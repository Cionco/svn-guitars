<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee;http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd" version="3.1">
  <error-page>
    <error-code>503</error-code>
    <location>/error503.jsp</location>
  </error-page>
  <servlet>
    <servlet-name>jersey-serlvet</servlet-name>
    <servlet-class>org.glassfish.jersey.servlet.ServletContainer</servlet-class>
    <init-param>
      <param-name>jersey.config.server.provider.packages</param-name>
      <param-value>de.fs.webarch.server</param-value>
    </init-param>
    <load-on-startup>1</load-on-startup>
  </servlet>
  <servlet-mapping>
    <servlet-name>jersey-serlvet</servlet-name>
    <url-pattern>/rest/*</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>EchoServlet</servlet-name>
    <servlet-class>de.fs.webarch.server.EchoServlet</servlet-class>
    <init-param>
      <param-name>build</param-name>
      <param-value>DEV001</param-value>
    </init-param>
  </servlet>
  <servlet-mapping>
    <servlet-name>EchoServlet</servlet-name>
    <url-pattern>/status/alive.json</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>SetupSubjectServlet</servlet-name>
    <servlet-class>de.fs.webarch.server.SetupSubjectServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>SetupSubjectServlet</servlet-name>
    <url-pattern>/subjects/SetupSubjectServlet</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>NewHomeworkServlet</servlet-name>
    <servlet-class>de.fs.webarch.server.NewHomeworkServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>NewHomeworkServlet</servlet-name>
    <url-pattern>/Homework/NewHomeworkServlet</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>UploadHomeworkServlet</servlet-name>
    <servlet-class>de.fs.webarch.server.UploadHomeworkServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>UploadHomeworkServlet</servlet-name>
    <url-pattern>/Homework/UploadHomeworkServlet</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>AssessServlet</servlet-name>
    <servlet-class>de.fs.webarch.server.AssessServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>AssessServlet</servlet-name>
    <url-pattern>/Homework/Assess/AssessServlet</url-pattern>
  </servlet-mapping>
  <resource-ref>
    <description>Connection to Database</description>
    <res-ref-name>jdbc/Homework</res-ref-name>
    <res-type>javax.sql.DataSource</res-type>
    <res-auth>Container</res-auth>
  </resource-ref>
  <jsp-config>
  	<jsp-property-group>
  		<url-pattern>*.jsp</url-pattern>
  		<page-encoding>UTF-8</page-encoding>
  	</jsp-property-group>
  </jsp-config>
</web-app>